{% extends "_layouts/blank.html.twig" %}

{% block title %}
    {{ 'control_panel'|trans }} - {{ 'cities'|trans }}
{% endblock %}

{% block content %}
    <section class="d-flex">
        {% include "_components/side-bar.html.twig" %}

        <div class="management-content w-100 p-4">
            <div class="row">
                <div class="col-12">
                    <div class="card card-body shadow">
                        <div class="d-flex justify-content-between">
                            <h2>
                                {{ 'organizations'|trans }} - {{ 'documents'|trans }}
                            </h2>
                        </div>

                        <hr>

                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                            <tr>
                                <th>{{ 'name'|trans }}</th>
                                <th>{{ 'document'|trans }}</th>
                                <th>{{ 'updated_at'|trans }}</th>
                                <th>{{ 'actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for municipality in municipalities %}
                                <tr>
                                    <td><a href="{{ path('admin_regmel_municipality_details', {id: municipality.id}) }}">{{ municipality.name }}</a></td>
                                    <td><a onclick="openDocumentModal('{{ municipality.name }}', '{{ municipality.id }}', '{{ municipality.extraFields.filepath }}')" data-bs-toggle="modal" data-bs-target="#modalDocument" href="#">{{ municipality.extraFields.form }}</a></td>
                                    <td>{{ municipality.updatedAt is not null ? municipality.updatedAt.format('d/m/Y H:i:s') : municipality.createdAt.format('d/m/Y H:i:s') }}</td>
                                    <td>
                                        <button class="btn btn-outline-warning btn-sm edit-organization" data-bs-toggle="modal" data-bs-target="#modalEditOrganization" data-id="{{ municipality.id }}" data-token="{{ token }}">{{ 'edit'|trans }}</button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center">{{ 'no_data_found'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="modal fade" id="modalDocument" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modalDocumentTitle"></h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="" method="post">
                    <div class="modal-body" style="min-height: 600px;" id="modalDocumentBody">
                        ...

                    </div>
                    <div class="modal-footer d-block">
                        <input type="hidden" id="organizationId">

                        <div class="row">
                            <div class="col-8">
                                <input type="text" placeholder="Informe o Motivo" class="form-control">
                            </div>
                            <div class="col-4 text-end">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Recusar</button>
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aprovar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


{% endblock %}

{% block extra_javascripts %}
    {{ parent() }}

    <script>
        function openDocumentModal (organizationName, organizationId, filePath) {
            document.getElementById('modalDocumentTitle').innerHTML = 'Documento - ' + organizationName;
            document.getElementById('modalDocumentBody').innerHTML = `
                <object style="min-height: 600px;" data="http://localhost:8080/painel/admin/municipios/72653c2d-146f-4eeb-86fb-3217cb241692/oficio" type="application/pdf" width="100%" height="100%">
                  <p>Alternative text - include a link <a href="${filePath}">to the PDF!</a></p>
                </object>
            `;
        }
    </script>
{% endblock %}
