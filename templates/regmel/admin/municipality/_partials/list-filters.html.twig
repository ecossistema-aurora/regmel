<form method="get" class="row mb-3">
    <div class="col-md-3">
        <label for="region-filter" class="form-label">{{ 'region'|trans }}</label>
        <select id="region-filter" name="region" class="form-select" data-placeholder="{{ 'all_regions'| trans }}">
            <option value="">{{ 'all_regions'|trans }}</option>

            {% for region in regions %}
                <option value="{{ region.value }}" {% if region.value == app.request.get('region') %}selected{% endif %}>
                 {{ region.value }}
                </option>
            {% endfor %}
        </select>
    </div>
    <div class="col-md-3">
        <label for="state-filter" class="form-label">{{ 'state'|trans }}</label>
        <select id="state-filter" name="state" class="form-select" data-placeholder={{ 'all_states'| trans }}>
            <option value="">{{ 'all_states'|trans }}</option>
            {% for state in states %}
                <option value="{{ state.acronym }}" {% if state.acronym == app.request.get('state') %}selected{% endif %}>
                    {{ state.name }}
                </option>
            {% endfor %}
        </select>
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-link" onclick="resetForm(this.form); this.form.submit();">{{ 'reset'|trans }}</button>
    </div>
</form>
