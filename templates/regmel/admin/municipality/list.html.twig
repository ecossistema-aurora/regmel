{% extends "_layouts/blank.html.twig" %}

{% block title %}
    {{ 'control_panel'|trans }} - {{ 'cities'|trans }}
{% endblock %}

{% block content %}
    {% include 'regmel/admin/municipality/_partials/modal-edit.html.twig' %}

    <section class="d-flex">
        {% include "_components/side-bar.html.twig" %}

        <div class="management-content w-100 p-4">
            <div class="row">
                <div class="col-12">
                    <div class="card card-body shadow">
                        <div class="d-flex justify-content-between">
                            <h2>
                                {% if context_title == 'my_municipalities' %}
                                    {{ 'my_municipalities'|trans }}
                                {% else %}
                                    {{ 'organizations'|trans }}
                                {% endif %}
                            </h2>
                        </div>

                        <hr>

                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
                            <form method="get" class="row mb-3">
                                <div class="col-md-3">
                                    <label for="region-filter" class="form-label">{{ 'region'|trans }}</label>
                                    <select id="region-filter" name="region" class="form-select" onchange="this.form.submit()">
                                        <option value="">{{ 'all_regions'|trans }}</option>
                                        {% for region in regions %}
                                            <option value="{{ region.value }}" {% if region.value == app.request.get('region') %}selected{% endif %}>
                                                {{ region.value }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label for="state-filter" class="form-label">{{ 'state'|trans }}</label>
                                    <select id="state-filter" name="state" class="form-select" onchange="this.form.submit()">
                                        <option value="">{{ 'all_states'|trans }}</option>
                                        {% for state in states %}
                                            <option value="{{ state.acronym }}" {% if state.name == app.request.get('state') %}selected{% endif %}>
                                                {{ state.name }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </form>
                        {% endif %}

                        <table class="js-grid table table-hover table-striped">
                            <thead class="table-dark">
                            <tr>
                                <th>{{ 'photo'|trans }}</th>
                                <th>{{ 'name'|trans }}</th>
                                <th>{{ 'description'|trans }}</th>
                                <th>{{ 'email'|trans }}</th>
                                <th>{{ 'site'|trans }}</th>
                                <th>{{ 'created_by'|trans }}</th>
                                <th>{{ 'created_at'|trans }}</th>
                                <th>{{ 'actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for municipality in municipalities %}
                                <tr>
                                    <td><img id="profile-img" src="{{ municipality.image ?? asset('img/city.png') }}" width="40px" class="rounded-circle" alt=""/></td>
                                    <td><a href="{{ path('admin_regmel_municipality_details', {id: municipality.id}) }}">{{ municipality.name }}-{{ municipality.extraFields.state }}</a></td>
                                    <td>{{ municipality.description }}</td>
                                    <td>{{ municipality.extraFields.email ?? '' }}</td>
                                    <td>{{ municipality.extraFields.site ?? '' }}</td>
                                    <td>{{ municipality.createdBy is defined and municipality.createdBy is not null ? municipality.createdBy.name : '-' }}</td>
                                    <td>{{ municipality.createdAt|date('d/m/Y H:i:s') }}</td>
                                    <td>
                                        <button class="btn btn-outline-warning btn-sm edit-organization" data-bs-toggle="modal" data-bs-target="#modalEditOrganization" data-id="{{ municipality.id }}" data-token="{{ token }}">{{ 'edit'|trans }}</button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center">{{ 'no_data_found'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block extra_javascripts %}
    {{ parent() }}
    <script type="module" src="{{ asset('js/grid-init.js') }}"></script>
{% endblock %}
