<div class="modal fade" id="modalEditCompany" tabindex="-1" aria-labelledby="modalEditCompanyLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalEditCompanyLabel">{{ 'edit_company'| trans }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="edit-company" method="POST" action="">
          <input type="hidden" name="token" value="{{ csrf_token('edit-company') }}">
          <div class="mb-3">
            <label for="company-name" class="form-label">{{ 'name'| trans }}</label>
            <input type="text" class="form-control" id="company-name" name="name" value="" required>
          </div>
          <div class="mb-3">
            <label for="company-description" class="form-label">{{ 'description'| trans }}</label>
            <textarea class="form-control" id="company-description" name="description" rows="3" required></textarea>
          </div>
          <div class="mb-3">
            <label for="company-site" class="form-label">{{ 'site'| trans }}</label>
            <input type="url" class="form-control" id="company-site" name="site" value="">
          </div>
          <div class="mb-3">
            <label for="company-phone" class="form-label">{{ 'phone'| trans }}</label>
            <input type="tel" maxlength="16" class="form-control" id="company-phone" name="telefone" data-mask="phone" value="">
          </div>
          <div class="mb-3">
            <label for="company-email" class="form-label">{{ 'email'| trans }}</label>
            <input type="email" class="form-control" id="company-email" name="email" value="">
          </div>
          <div class="mb-3">
            <label for="company-cnpj" class="form-label">{{ 'cnpj'| trans }}</label>
            <input type="text" maxlength="18" class="form-control" id="company-cnpj" name="cnpj" data-mask="cnpj" value="">
          </div>
          <div class="mb-3">
            <label class="form-label">{{ 'type'| trans }}</label>
            <div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="tipo" id="tipo-empresa" value="Empresa" required>
                <label class="form-check-label" for="tipo-empresa">{{ 'company'| trans }}</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="tipo" id="tipo-entidade" value="Entidade" required>
                <label class="form-check-label" for="tipo-entidade">{{ 'entity'| trans }}</label>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'cancel'| trans }}</button>
        <button type="submit" class="btn btn-primary" form="edit-company">{{ 'save'| trans }}</button>
      </div>
    </div>
  </div>
</div>

{% block extra_javascripts %}
  <script src="{{ asset('js/company/load-company-infos.js') }}"></script>
  <script src="{{ asset('js/mask.js') }}"></script>
{% endblock %}
