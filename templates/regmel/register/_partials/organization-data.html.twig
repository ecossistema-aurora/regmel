<h4 class="mt-4">{{ 'organization_data' | trans }}</h4>

<div class="alert alert-info">
    Apenas para munic√≠pios e/ou <em>Arranjos Populacionais</em> a partir de 50.000 habitantes
</div>

<div class="row">
    <div class="col-6 mb-3">
        <label for="state" class="form-label required">{{ 'state' | trans }}</label>
        <select id="state" name="state" class="form-select">
            <option value="">{{ 'select' | trans }}</option>
            {% for state in states %}
                <option value="{{ state.id }}">{{ state.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="col-6 mb-3">
        <label for="city" class="form-label required">{{ 'city'| trans }}</label>
        <select id="city" name="city" class="form-select"
                data-placeholder="{{ 'select'|trans }}">
            <option value="">{{ 'select'|trans }}</option>
        </select>
    </div>
</div>

<div class="row">
    <div class="col-4 mb-3">
        <label for="site" class="form-label">{{ 'view.organization.site' | trans }}</label>
        <input type="text" class="form-control" id="site" name="site" placeholder={{ 'view.organization.site' | trans}} required>
    </div>
    <div class="col-4 mb-3">
        <label for="phone" class="form-label">{{ 'view.organization.phone' | trans }}</label>
        <input type="tel" class="form-control" maxlength="16" data-mask="phone" id="phone" name="phone" placeholder={{ 'view.organization.phone' | trans}} required>
    </div>

    <div class="col-4 mb-3">
        <label for="email" class="form-label">{{ 'view.organization.email' | trans }}</label>
        <input type="email" class="form-control" id="email" name="email" placeholder={{ 'view.organization.email' | trans}} required>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 mb-3">
        <label class="form-label d-block">{{ 'improvement_municipality' | trans }}</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="hasHousingExperience" id="hasHousingExperienceYes" value="1" required>
            <label class="form-check-label" for="hasHousingExperienceYes">{{ 'yes' | trans }}</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="hasHousingExperience" id="hasHousingExperienceNo" value="0">
            <label class="form-check-label" for="hasHousingExperienceNo">{{ 'no' | trans }}</label>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 mb-3">
        <label class="form-label d-block">{{ 'plhis' | trans }}</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="hasPlhis" id="hasPlhisYes" value="1" required>
            <label class="form-check-label" for="hasPlhisYes">{{ 'yes' | trans }}</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="hasPlhis" id="hasPlhisNo" value="0">
            <label class="form-check-label" for="hasPlhisNo">{{ 'no' | trans }}</label>
        </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col-12 mb-3">
        <label for="joinForm" class="form-label">
            {{ 'view.organization.file_part1' | trans}}
        </label>
        <a class="mx-1" href="/files/adesao-ao-programa.docx" download>{{ 'view.organization.download_form_model' | trans }}</a>
        {{ 'view.organization.file_part2' | trans}}

        <input class="form-control" type="file" id="joinForm" name="joinForm" accept="application/pdf" required>
        <div class="form-text">
            {{ 'view.organization.pdf_advice' | trans}}
        </div>
    </div>
</div>

<hr>
