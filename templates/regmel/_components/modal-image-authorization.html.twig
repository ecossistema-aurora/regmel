<div class="modal fade" id="modalImageAuthorization" tabindex="-1" aria-labelledby="modalImageAuthorizationLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalImageAuthorizationLabel">{{ env.aurora.terms.lgpd.title }}</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                {{ env.aurora.terms.image_authorization.text | raw }}
            </div>
            <div class="modal-footer container justify-content-center">
                <button type="button" class="btn btn-lg btn-secondary col-4 me-4 cancel-policy" data-policy="image" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-lg btn-primary col-4 accept-policy" data-policy="image" data-bs-dismiss="modal">Aceitar</button>
            </div>
        </div>
    </div>
</div>
