{% extends "_layouts/blank.html.twig" %}

{% block title %} {{ 'control_panel'|trans }} - {{ 'users'|trans }}{% endblock %}

{% block content %}
    {% include '_components/modal-photo.html.twig' %}

    <section class="d-flex">
        {% include "_components/side-bar.html.twig" %}

        <div class="management-content w-100 p-4">
            <div class="row">
                <div class="col-12">
                    <div class="card card-body shadow">
                        <div class="d-flex justify-content-between">
                            <h2>{{ 'users'|trans }}</h2>

                            <div>
                                <a href="{{ path('admin_user_create') }}" class="btn btn-success">{{ 'view.user.create'|trans }}</a>
                            </div>
                        </div>

                        <hr>

                        <table class="js-grid table table-hover table-striped">
                            <thead class="table-dark">
                            <tr>
                                <th>{{ 'name'|trans }}</th>
                                <th>{{ 'email'|trans }}</th>
                                <th>{{ 'image'|trans }}</th>
                                <th>{{ 'status' |trans }}</th>
                                <th>{{ 'created_at'|trans }}</th>
                                <th>{{ 'actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in users %}
                                <tr>
                                    <td><a href="#">{{ item.name }}</a></td>
                                    <td>{{ item.email }}</td>
                                    <td>
                                        <a
                                            data-src="{{ asset(item.image ?? 'img/user.png') }}"
                                            data-alt="{{ item.name }} Photo"
                                            data-bs-toggle="modal"
                                            data-bs-target="#modal-photo"
                                            onclick="showPhoto(this)"
                                            href="#"
                                        >
                                            <img src="{{ asset(item.image ?? 'img/user.png') }}" class="rounded-circle" width="50px" alt="{{ item.name }} Photo">
                                        </a>
                                    </td>
                                    {% set status_map = {
                                        'active': 'active',
                                        'blocked': 'blocked',
                                        'awaitingconfirmation': 'awaiting_confirmation'
                                    } %}
                                    {% set status_class_map = {
                                        'active': 'bg-primary',
                                        'blocked': 'bg-danger',
                                        'awaitingconfirmation': 'bg-secondary'
                                    } %}
                                    <td>
                                    <span class="badge {{ status_class_map[item.status|lower] }}">
                                        {{ status_map[item.status|lower]|trans }}
                                    </span>
                                    </td>

                                    <td>{{ item.createdAt.format('d/m/Y H:i:s') }}</td>
                                    <td>
                                        <a href="{{ path('admin_user_timeline', {id: item.id}) }}" class="btn btn-outline-info btn-sm">{{ 'Timeline'|trans }}</a>
                                        <a href="#" class="btn btn-outline-warning btn-sm">{{ 'edit'|trans }}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block extra_javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/modal-photo.js') }}"></script>
    <script src="{{ asset('js/grid-init.js') }}"></script>
{% endblock %}
