<div class="tab-pane" id="inscriptions">
    <div class="card card-body shadow">
        <table class="js-grid table table-hover table-striped">
            <thead class="table-dark">
            <tr>
                <th>{{ 'photo' | trans }}</th>
                <th>{{ 'name' | trans }}</th>
                <th>{{ 'created_at' | trans }}</th>
                <th>{{ 'status' | trans }}</th>
                <th>{{ 'actions' | trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for item in inscriptions %}
                <tr>
                    <td>
                        <img
                                src="{{ asset(item.agent.image ?? item.organization.image ?? 'img/ada-lovelace.png') }}"
                                alt="{{ 'agent-picture'|trans }}"
                                class="profile-picture"
                        >
                    </td>
                    <td>{{ item.agent.name ?? item.organization.name }}</td>
                    <td>{{ item.createdAt.format('d/m/Y H:i:s') }}</td>
                    <td>
                        {% if item.status %}
                            <span class="badge bg-success">
                                {{ 'view.opportunity_admin.inscriptions.status.active'|trans }}
                            </span>
                        {% else %}
                            <span class="badge bg-danger">
                                {{ 'view.opportunity_admin.inscriptions.status.inactive'|trans }}
                            </span>
                        {% endif %}
                    </td>
                    <td>
                        <a
                            href="{{ path('admin_registration_get', {id: item.id}) }}"
                            class="btn btn-outline-info btn-sm"
                        >
                            {{ 'view.opportunity_admin.inscriptions.see_inscription' | trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
